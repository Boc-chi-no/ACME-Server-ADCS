{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning"
        }
    },

    "AllowedHosts": "*",

    "AcmeServer": {
        "HostedWorkers": {
            "EnableValidationService": true,
            "EnableIssuanceService": true,

            "ValidationCheckInterval": 60,
            "IssuanceCheckInterval": 60
        },

        "TOS": {
            "RequireAgreement": false
        }
    },

    "AcmeFileStore": {
        "BasePath": "C:\\Acme-Server\\"
    },

    "ACDSIssuer": {
        "AllowCNSuffix": true
    }
}
